<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.kurwawan.posphone.View.View_Order.PembayaranActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total :"
        android:textSize="26sp"
        android:fontFamily="sans-serif"
        android:textColor="#000"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Rp."
            android:textSize="36sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>
        <TextView
            android:id="@+id/tv_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="#000"
            android:text="0"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Nominal Pembayaran :"
        android:textSize="28sp"
        android:textColor="#000"
        android:gravity="center"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="25dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Rp."
            android:textSize="36sp"
            android:textColor="#000"
            android:fontFamily="sans-serif"/>
        <EditText
            android:id="@+id/et_pembayaran"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="#000"
            android:hint="0"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="number"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok_pembayaran"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="OK"
        android:textSize="34sp"
        android:fontFamily="sans-serif"
        android:textColor="#fff"
        android:background="@drawable/border_btn_default"/>

</LinearLayout>
