<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kurwawan.posphone.View.View_Order.RingkasanOrderEditActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nama_menu_edit"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Mie Ayam"
                android:textSize="26sp"
                android:textColor="#000"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity=""/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah  :  "
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:fontFamily="sans-serif"/>
                <TextView
                    android:id="@+id/tv_jml_porsi"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_tambah_porsi"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:text="+"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginRight="6dp"/>
                    <Button
                        android:id="@+id/btn_kurang_porsi"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:text="-"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Catatan   :"
                android:textColor="#000"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="24sp"/>
            <EditText
                android:id="@+id/et_catatan_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="isi jika perlu"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:fontFamily="sans-serif"
                android:textSize="18sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="7dp">
        <Button
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="HAPUS"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:textColor="#fff"
            android:layout_weight="1"
            android:background="@drawable/border_btn_hapus"/>
        <Button
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="BAYAR"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:textColor="#fff"
            android:layout_weight="1"
            android:background="@drawable/border_btn_bayar"/>
    </LinearLayout>

</LinearLayout>
